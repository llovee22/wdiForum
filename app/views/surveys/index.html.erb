<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li class="current-page">Feedback Inbox</li>
</ol>



<div class="index-container">
    <div class="row index-heading">
        <div class="col-xs-5"> Topic</div>
        <div class="col-xs-3"></div>
        <div class="col-xs-2 index-comment-view"> Comments/Views</div>
        <div class="col-xs-2 index-last-comment"> Last Comment</div>
    </div>

    <div class="index-listing">
        <% if !@surveys.empty? %>
        <% @surveys.order('created_at DESC').each do |s| %>
          <div class="row">
              <div class="col-xs-5">
              <div>
                <a class="post-index-title" href="/surveys/<%= s.id %>"><%= s.title %></a>
              </div>
              <div>
              <a class="post-index-owner" href="/users/<%=s.user.id%>"><%= s.user.username %></a>,
              <span class="post-index-date"><%= s.created_at.strftime("%b %d, %Y") %></span>
              <span class="like-count">(<%= s.likes.count %> likes)</span>
            </div>
              </div>
              <div class="col-xs-3"></div>
              <div class="col-xs-2 index-comment-view">
                    <div><span>Comments:</span> <%= s.answers.count%></div>
                    <div><span>Views: </span><%= s.view %></div>
              </div>
              <div class="col-xs-2">
                  <% if s.answers.empty? == false %>
                      <div class="index-last-comment last-comment-date">
                        <%= s.answers.last.created_at.strftime("%b %d, %H:%m") %>
                      </div>
                      <div class="index-last-comment last-comment-name">
                          by <a href="/users/<%=s.answers.last.user.id%>"><%= s.answers.last.user.username%></a>

                      </div>
                  <% else %>
                      <div class="index-last-comment">
                        <div class="index-last-comment bold-text">None</div>
                        <div class="index-last-comment bold-text last-comment-name">N/a</div>
                      </div>
                  <% end %>
            </div>
        </div>
        <% end %>
      </div>
      <% else %>
      <div class="row">
        <div class="col-xs-4"></div>
        <div class="col-xs-4">
        <em><span class="forum-empty">The forum is currently empty</span></em>
      </div>

      </div>
      <% end %>
</div>


<div class="row index-bottom-footer">
    <div class="col-xs-2">
        <%= will_paginate @surveys, renderer: BootstrapPagination::Rails, :class => "pagination-sm", :previous_label => "《", :next_label => "》"%>
    </div>
    <div class="col-xs-9">
    </div>
    <div class="col-xs-1">
        <% if current_user %>
            <a href="/surveys/new" class="btn btn-default new-post-btn">New Post</a>
        <% end %>
    </div>
</div>
