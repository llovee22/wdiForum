<div class="container-fluid new-reply">
  <%= form_for([@article, @article.comments.build], :html => {class:"form-horizontal"}) do |f| %>
    <fieldset>
      <div class="form-group new-reply-header">
        <span class="col-md-7 col-md-offset-5">
          <em>New Comment</em>
        </span>
      </div>

      <div class="form-group">
        <div class="col-xs-2"></div>

        <div class="col-xs-8">
          <%= f.text_area :content, class: "form-control wysihtml5"%>
        </div>

        <div class="col-xs-2"></div>
      </div>

      <div class="form-group">
        <div class="col-xs-2"></div>

        <div class="col-xs-7">
          <%= f.submit 'Post', class: "btn btn-default submit-btn"%>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>

<%= javascript_tag do %>
    textOption();
<% end %>
