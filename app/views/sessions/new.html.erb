<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li class="current-page">User Login</li>
</ol>

<div class="container container-border gray-background">
<%= form_for :login, :html => {class: "form-horizontal"} do |f| %>
<fieldset>
  <div class="form-group form-header">
      <span class="col-md-7 col-md-offset-5">
        Login
      </span>
  </div>
<div class="form-group-margin">
    <div class="form-group">
        <%= f.label :username, class: "col-md-5 control-label"%>
        <div class="col-md-3">
            <%= f.text_field :username, placeholder: 'Username', class: "form-control" %>
          </div>
    </div>

    <div class="form-group">
        <%= f.label :password, class: "col-md-5 control-label"%>
        <div class="col-md-3">
        <%= f.password_field :password, placeholder: 'Password', class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
        <div class="col-md-8 col-md-offset-5">
            <%= f.submit 'Login', class:"btn btn-default submit-btn"%>
            <%= link_to "New User ?", signup_path, class: "btn btn-default submit-btn"%>
        </div>
    </div>
</div>
</fieldset>
<% end %>
</div>
