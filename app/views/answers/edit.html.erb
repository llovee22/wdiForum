<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><a href="/FeedbackInbox">Feedback Inbox</a></li>
  <li><a href="/surveys/<%= @answer.survey.id %>"><%= @answer.survey.title %></a></li>
  <li class="current-page">Edit Answer</li>
</ol>

<div class="container edit-reply">
<%= form_for(@answer, url: update_answer_path(@answer), method: :patch, :html => {class:"form-horizontal"}) do |f| %>
<fieldset>
  <div class="form-group post-header">
      <span class="col-md-7 col-md-offset-5">
          <em>Edit Comment</em>
      </span>
  </div>
  <div class="form-group">
      <div class="col-xs-2"></div>

      <div class="col-xs-8">
          <%= f.text_area :answer, placeholder: "Minimum length: 2", class: "form-control wysihtml5"%>
      </div>

      <div class="col-xs-1"></div>
  </div>

  <div class="form-group">
    <div class="col-xs-2"></div>

    <div class="col-xs-8">
        <%= f.submit 'Post', class: "btn btn-default submit-btn btn-block"%>
      </div>
  </div>

</fieldset>
<% end %>
</div>

<%= javascript_tag do %>
    textOption();
<% end %>
