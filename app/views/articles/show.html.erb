<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><a href="/GeneralDiscussion">General Discussion</a></li>
  <li class="current-page"><%= @article.title %></li>
</ol>

<div class="container-border container-fluid">
  <div class="row show-header">
    <h4> &nbsp; <%= @article.title %></h4>
  </div>

  <div class="row orange-bottom">
    <div class="col-xs-3 show-left-column gray-right">
      <h4><%= link_to "#{@article.user.username}", user_information_path(@article.user) %></h4>
    </div>

    <div class="col-xs-7">
      <h4 class="gray"> Posted on <%= @article.created_at.strftime("%b %d, %H:%m") %></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-3 show-left-column gray-right">
      <img src="<%= @article.user.image %>"><br>
      <% if @article.user == current_user %>
        <div class="dropdown collapse navbar-collapse">
          <a class="btn btn-default submit-btn dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">More Action</a>
          <ul class="dropdown-menu pull-right">
            <li><%= link_to 'Edit', edit_article_path(@article) %></li>
            <li><%= link_to 'Delete', destroy_article_path(@article), method: :delete %></li>
          </ul>
        </div>
      <% end %>

      <% if !is_owner?(@article) && logged_in? %>
        <% if @article.likes.find_by(user_id: current_user.id).nil? %>
          <%= render 'likes/form' %>
        <% else %>
          <%= link_to 'Unlike', destroy_like_path(@article.likes.find_by(user_id: current_user.id)), method: :delete, class: "btn like-btn btn-default" %>
        <% end %>
      <% end %>
    </div>

    <div class="col-xs-9 post-show-content">
      <%= render html: @article.content.html_safe %>
    </div>
  </div>
</div>

<% @comments.each do |c| %>
  <div class="post-show-individual container-fluid show-reply">
    <div class="row">
      <div class="col-xs-3 post-show-owner-section">
        <%= link_to "#{c.user.username}", user_information_path(c.user) %><br>
        <% if is_owner?(c) %>
          <div class="dropdown collapse navbar-collapse">
            <a class="btn btn-default submit-btn dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">More Action</a>
            <ul class="dropdown-menu pull-right">
              <li><%= link_to 'Edit', edit_comment_path(c) %></li>
              <li><%= link_to 'Delete', destroy_comment_path(c), method: :delete %></li>
            </ul>
          </div>
        <% end %>
      </div>

      <div class="col-xs-9 show-right-column">
        <%= render html: c.content.html_safe %>
      </div>
    </div>
  </div>
<% end %>

<% if current_user %>
    <%= render 'comments/form' %>
<% end %>
